@model IEnumerable<RVLife.Models.Item>


@{
    ViewData["Title"] = "Inventory";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Inventory List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Add new item</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Purchased From</th>
                    <th>Price</th>
                    <th>Notes</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%">@item.ItemName</td>
                    <td width="15%">@item.PurchasedFrom</td>
                    <td width="5%">@item.PurchasedPrice</td>
                    <td width="30%">@item.Notes</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    } else
    {
        <p>No items yet</p>
    }

</div>